pkgrel=1
epoch=
pkgdesc="The FFT benchmark from Zsolt Kr√ºpl"
arch=('aarch64')
url="https://github.com/hg2ecz/ProgrammingLanguageBenchmark-FFT_4096"
license=('')
groups=()
depends=(icu)
makedepends=()
checkdepends=()
