install=fft-benchmark.install

package() {
	cd ".."
	make DESTDIR="$pkgdir/opt/fft-benchmark" ARCH=arm64 VERSION=$pkgver -f Makefile
	mkdir -p /usr/bin
}

post_install() {
	ln -s /opt/fft-benchmark/fft-benchmark /usr/bin/
}

pre_remove() {
	rm -rf /usr/bin/fft-benchmark
}
